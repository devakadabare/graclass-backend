# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/online_lecturer"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="1h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRATION="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# Email Configuration (Future use)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# File Upload Configuration (Future use)
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"


# AWS S3 Configuration
# Used for profile image uploads
# Images are stored in: /lecturers/{id}/profile/images and /students/{id}/profile/images
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"